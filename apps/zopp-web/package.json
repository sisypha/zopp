{
  "name": "zopp-web",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "css:build": "npx tailwindcss -i ./style/input.css -o ./style/output.css",
    "css:watch": "npx tailwindcss -i ./style/input.css -o ./style/output.css --watch",
    "dev": "npm run css:build && trunk serve",
    "build": "npm run css:build && trunk build --release",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/mailparser": "^3.4.6",
    "@types/smtp-server": "^3.5.12",
    "autoprefixer": "^10.4.0",
    "daisyui": "^4.0.0",
    "mailparser": "^3.9.1",
    "postcss": "^8.4.0",
    "smtp-server": "^3.18.0",
    "tailwindcss": "^3.4.0"
  }
}
